{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "SUB",
  "scopeName": "source.sub",
  "fileTypes": ["sb"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#booleans"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.sub",
          "match": "//.*$"
        },
        {
          "name": "comment.block.sub",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.sub",
          "match": "\\b(#if|#elif|#else|#end|#for|#while|#do|#break|#continue|#return)\\b"
        },
        {
          "name": "keyword.declaration.sub",
          "match": "\\b(#var|#const|#function)\\b"
        },
        {
          "name": "keyword.other.sub",
          "match": "\\b(#embed|#endembed|#ui|#import|#export)\\b"
        },
        {
          "name": "keyword.operator.logical.sub",
          "match": "\\b(and|or|not|in)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.sub",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.sub",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.sub",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.sub",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.sub",
          "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.numeric.integer.sub",
          "match": "\\b[0-9]+\\b"
        },
        {
          "name": "constant.numeric.hex.sub",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.binary.sub",
          "match": "\\b0[bB][01]+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.sub",
          "match": "\\+|\\-|\\*|\\/|%"
        },
        {
          "name": "keyword.operator.comparison.sub",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.sub",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.assignment.sub",
          "match": "="
        },
        {
          "name": "keyword.operator.bitwise.sub",
          "match": "&|\\||\\^|~|<<|>>"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.sub",
          "match": "#(print|input|len|range|type|str|int|float|bool)\\b"
        },
        {
          "name": "entity.name.function.sub",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)(?=\\()"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.sub",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "name": "constant.language.boolean.sub",
          "match": "\\b(true|false|null|nil)\\b"
        }
      ]
    }
  }
}
